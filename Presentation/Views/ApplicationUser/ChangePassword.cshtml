@using Presentation.Enums
@inject Microsoft.AspNetCore.Identity.SignInManager<Core.Entities.ApplicationUser> signInManager
@model Presentation.Models.EditProfileModel
@{
    ViewData["Title"] = "Change Password";
    var controller = "ApplicationUser";
}

<div class="card mb-4">

    <!-- Account -->

    <hr class="my-0" />
    <div class="card-body">
        <form action="/@controller/ChangePassword" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">

                    <label class="form-label" for="password">Current Password</label>

                    <div class="input-group input-group-merge">
                        <input type="password"
                               asp-for="CurrentPassword"
                               class="form-control "
                               placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                               aria-describedby="password" />
                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                    </div>
                </div>
               
                <span asp-validation-for="CurrentPassword" class="text-danger mb-3"></span>


                <div class="mb-3 col-md-6 form-password-toggle">
                    <label class="form-label" for="password">New Password</label>
                    <div class="input-group input-group-merge">
                        <input type="password"
                               asp-for="NewPassword"
                               class="form-control"
                               placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                               aria-describedby="password" />
                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                    </div>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger mb-3"></span>

                <div class="mb-3 col-md-6 form-password-toggle">
                    <label class="form-label" for="password">Confirm Password</label>
                    <div class="input-group input-group-merge">
                        <input type="password"
                               asp-for="ConfirmPassword"
                               class="form-control"
                               placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                               aria-describedby="password" />
                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger mb-3"></span>


            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3 col-md-6"></div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Save changes</button>
            </div>
        </form>
    </div>
    <!-- /Account -->
</div>

@section Scripts
{
    <script src="@Url.Content("~/js/common.js")" type="text/javascript"></script>

    @if (TempData["notice"] != null)
    {
        switch ((int)TempData["notice"])
        {
            case (int)StatusEnum.NoticeStatus.Success:
                <script>SaveAlert('center', 'success', 'Order');</script>
                break;
            case (int)StatusEnum.NoticeStatus.Edit:
                <script>EditAlert('center', 'success', 'Order');</script>
                break;
            case (int)StatusEnum.NoticeStatus.Delete:
                <script>DeleteAlert('center', 'success', 'Order');</script>
                break;
            case (int)StatusEnum.NoticeStatus.Deliver:
                <script>DeliverAlert('center', 'success', 'Order');</script>
                break;
            case (int)StatusEnum.NoticeStatus.Change:
                <script>SaveAlert('center', 'success', 'Password');</script>
                break;
            
        }

    }
}


