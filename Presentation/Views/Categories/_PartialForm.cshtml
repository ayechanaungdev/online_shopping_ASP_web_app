@using Presentation.Enums;
@model Core.Entities.Category
@{
    var controller = "Categories";
    ViewData["Title"] = "All Category";
}
<div class="card mb-4">
    <div class="card-body">
        <form action="/@controller/@ViewData["Action"]" method="post">
            @Html.AntiForgeryToken()
            @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
            {
                <input asp-for="Id" hidden />
            }
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Category Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="field-1" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="/@controller" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>